<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/design_default_color_on_primary"
    android:orientation="vertical">


    <EditText
        android:id="@+id/descriptionEditText"
        android:layout_width="321dp"
        android:layout_height="46dp"
        android:layout_marginTop="16dp"
        android:hint="NOMBRE RAIDER"
        android:textColorHint="#150101"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imagePost"
        android:layout_width="379dp"
        android:layout_height="356dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="18dp"
        android:background="@drawable/ic_action_name"
        app:layout_constraintBottom_toTopOf="@+id/placeEditText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/descriptionEditText" />

    <EditText
        android:id="@+id/placeEditText"
        android:layout_width="327dp"
        android:layout_height="52dp"
        android:layout_marginTop="8dp"
        android:hint="PLACE"
        android:textColorHint="#2B0202"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.535"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imagePost" />

    <ImageView
        android:id="@+id/videoImageView"
        android:layout_width="62dp"
        android:layout_height="50dp"
        android:layout_marginStart="37dp"
        android:layout_marginLeft="37dp"
        android:layout_marginEnd="124dp"
        android:layout_marginRight="124dp"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_save_post"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/galeryImageView"
        app:layout_constraintTop_toBottomOf="@+id/placeEditText"
        app:layout_constraintVertical_bias="0.627"
        app:srcCompat="@drawable/videopng" />

    <ImageView
        android:id="@+id/galeryImageView"
        android:layout_width="58dp"
        android:layout_height="52dp"
        android:layout_marginStart="92dp"
        android:layout_marginLeft="92dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_save_post"
        app:layout_constraintEnd_toStartOf="@+id/videoImageView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/placeEditText"
        app:srcCompat="@drawable/cam" />

    <Button
        android:id="@+id/btn_save_post"
        android:layout_width="70dp"
        android:layout_height="33dp"
        android:layout_marginBottom="30dp"
        android:background="@color/colorPrimary"
        android:text="publicar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/videoImageView"
        app:layout_constraintStart_toStartOf="@+id/galeryImageView"
        app:layout_constraintTop_toBottomOf="@+id/galeryImageView" />

</androidx.constraintlayout.widget.ConstraintLayout>